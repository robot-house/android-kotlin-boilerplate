<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="io.robothouse.androidboilerplate">

  <application
    android:name="io.robothouse.androidboilerplate.dagger2.AndroidBoilerPlateApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".feature.landing.LandingActivity"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar"
      android:windowSoftInputMode="adjustResize">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name="io.robothouse.androidboilerplate.feature.main.MainActivity"
      android:label="@string/app_name"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar"
      android:windowSoftInputMode="adjustResize">
    </activity>
    <activity
      android:name="io.robothouse.androidboilerplate.feature.register.RegisterActivity"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar"
      android:windowSoftInputMode="adjustResize">
    </activity>
  </application>

</manifest>